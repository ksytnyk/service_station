{+errors}
<div class="col-lg-12 alerts_block">
    {#error_alert}
    <div class="alert alert-danger clearfix">
        <button class="hide_alert">X</button>
        {#error_msg}
        <div class="col-lg-4">{msg}</div>
        {/error_msg}
    </div>
    {/error_alert}

    {#success_alert}
    <div class="alert alert-success">
        <button class="hide_alert">X</button>
        {success_msg}
    </div>
    {/success_alert}
</div>
{/errors}